    <script>
        $("#checkout-form").submit((e) => {
            e.preventDefault();
            let form_data = $('#checkout-form').serialize();
            // Add confirmation dialogs for all payment methods
            swal({
                title: "Are you sure?",
                text: "You are about to place an order. Continue?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((confirm) => {
                    if (confirm) {
                        let payment_method = $('input[name=payment_option]:checked').val();
                        console.log(payment_method)
                        // Wallet payment method requires wallet details confirmation
                        if (payment_method === 'Wallet') {
                            $.ajax({
                                method: 'POST',
                                url: '/get-wallet-details',
                                data: form_data,
                                success: (response) => {
                                    console.log('res', response)
                                    if (response.walletTotal < response.cartTotal) {
                                        swal({
                                            title: "Insufficient Balance",
                                            text: "You do not have enough balance in your wallet to complete the transaction.",
                                            icon: "error"
                                        });
                                    }
                                    else {
                                        swal({
                                            title: "Confirm Wallet Payment",
                                            text: `You have â‚¹ ${response.walletTotal} in your wallet. Continue?`,
                                            icon: "warning",
                                            buttons: true,
                                            dangerMode: true,
                                        })
                                            .then((confirm) => {
                                                if (confirm) {
                                                    placeOrder();
                                                }
                                            });
                                    }
                                },
                                error: (response, stat, err) => {
                                    console.log(response);
                                }
                            });
                        }
                        else {
                            placeOrder();
                        }
                    }
                });

            function placeOrder() {
                // Send AJAX request to place order
                $.ajax({
                    method: 'POST',
                    url: ('/place-order'),
                    data: form_data,
                    success: (response) => {
                        switch (response.status) {
                            case 'cod':
                                swal(
                                    "Successful!",
                                    "Order Placed Successfully!",
                                    "success"
                                )
                                    .then(() => {
                                        location.replace('/landing-page');
                                    });
                                break;
                            case 'wallet':
                                swal(
                                    "Successful!",
                                    "Order Placed Successfully!",
                                    "success"
                                )
                                    .then(() => {
                                        location.replace('/landing-page');
                                    });
                                break;
                            case 'razorpay':
                                razorPayPayment(response);
                                break;
                        }
                    },
                    error: (response, stat, err) => {
                        console.log(response);
                    }
                });
            }
        });
    </script>
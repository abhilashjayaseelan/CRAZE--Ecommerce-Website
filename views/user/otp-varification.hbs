<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-lg-5">
                <div
                    class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                    <div class="padding_eight_all bg-white">
                        <div class="heading_s1">
                            <h3 class="mb-30">Otp login</h3>
                            <p class="mb-50 font-sm" style="color: green;">
                                OTP has been sented to your registerd number.
                            </p>
                        </div>
                        <form method="post" action="/otp-varification">
                            <div class="form-group">
                                <input type="number" required="" name="otp" placeholder="Enter otp">
                            </div>
                            <div>
                                {{#if otpErr}}
                                <p style="color: red;">{{otpErr}}</p> 
                                {{/if}}
                            </div>
                            <div class="form-group text-center mt-15 mb-15">
                                <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Verify</button>
                            </div>
                            <div class="login_footer form-group">
                                <div class="text-muted text-center"><a href="/otp-login">Resend OTP</a></div>
                            </div>
                            <div class="login_footer form-group">
                                <div class="text-muted text-center">Don't have an account? <a href="/signup">Sign up now</a></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<body>



    <div class="screen-overlay"></div>
    <main class="main-wrap">
        <section class="content-main">
            <h3>Users</h3><br>
            <div class="card mb-4">
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Joined date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    {{#each user}}
                    <tbody>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    {{!-- <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt=""
                                        style="width: 45px; height: 45px" class="rounded-circle" /> --}}
                                    <div class="ms-3">
                                        <p class="fw-bold mb-1">{{name}}</p>
                                        <p class="text-muted mb-0">{{email}}</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="fw-normal mb-1">{{mobile}}</p>
                            </td>
                            <td>{{createdAt}}</td>
                            <td>
                                {{#if blocked}}
                                <p class="fw-normal mb-1" style="color: red;">Blocked</p>
                                {{else}}
                                <p class="fw-normal mb-1" style="color: green;">Active</p>
                                {{/if}}
                            </td>
                            <td>
                                <div >

                                    {{#if blocked}}
                                    <button id="block-btn" style="width:90px;"
                                        onclick="unblockUsers('{{_id}}',{{blocked}})"
                                        class="btn font-sm rounded btn-outline-success rounded mt-2">unblock</button>
                                    {{else}}
                                    <button id="block-btn2" style="width:90px;"
                                        onclick="blockUsers('{{_id}}',{{blocked}})"
                                        class="btn font-sm btn-outline-danger rounded mt-2">block</button>
                                    {{/if}}
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item active"><a class="page-link" href="#">01</a></li>
                        <li class="page-item"><a class="page-link" href="#">02</a></li>
